<% layout("/layouts/boilerplate") -%>
<body>
    <h3>Listing Details :</h3>
    <ul>
        <li><%= listing.title %></li>
        <li><%= listing.description %></li>
        <li>&#8377; <%= listing.price.toLocaleString("en-IN") %></li><!--this toLocaleString function is used to convert the number into string and put the commas according to indian standards("en-IN") -->
        <li><%= listing.location %></li>
        <li><%= listing.country %></li>
    </ul>
    <br>
    <a href="/listings/<%= listing._id %>/edit">Edit this listing</a>
    <br><br>
    <form method="POST" action="/listings/<%=listing.id%>?_method=DELETE">
        <button>Delete this listing</button>
    </form>
</body>
